<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="net.dambakk.ekkokammer.android.fragments.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_articleFragment"
            app:destination="@id/navigation_article" />
    </fragment>

    <fragment
        android:id="@+id/navigation_topics"
        android:name="net.dambakk.ekkokammer.android.fragments.TopicsFragment"
        android:label="fragment_topics"
        tools:layout="@layout/fragment_topics" />
    <fragment
        android:id="@+id/navigation_article"
        android:name="net.dambakk.ekkokammer.android.fragments.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article">
        <argument
            android:name="articleUrl"
            app:argType="string" />
    </fragment>
</navigation>